{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "esNext" ],
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./build",
        "paths": {
            "shared": ["../shared"],
            "config": ["config"], 
            "controller": ["controller"],
            "model": ["model"], 
            "@util": ["util"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "es2016"
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}