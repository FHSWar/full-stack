{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "esNext" ],
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./build",
        "paths": {
            "@/*": ["src/*"],
            // "@util": ["src/util"],
            "shared": ["../shared"],
            // "config": ["src/config"], 
            // "controller": ["src/controller"],
            // "model": ["src/model"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "es2016"
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}