{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,    
        "lib": [ "esNext" ],
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./build",
        "paths": {
            "@/*": ["src/*"],
            "test/*": ["test/*"],
            "shared": ["../shared"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2016",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}